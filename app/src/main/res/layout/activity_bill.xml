<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restback"
    android:backgroundTint="#90FFFFFF"
    android:backgroundTintMode="src_atop"
    tools:context="restaurant.com.restaurantapp.Bill">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:textSize="30dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"

        android:text="      Your Bill" />

    <TextView
        android:id="@+id/displaybill"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_marginTop="54dp"
        android:hint="Your Bill" />

    <Button
        android:id="@+id/cancelb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/displaybill"
        android:layout_below="@+id/displaybill"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="41dp"
        android:text="Cancel/Re-order"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/proceedb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancelb"
        android:layout_alignBottom="@+id/cancelb"
        android:layout_alignStart="@+id/displaybill"
        android:layout_marginStart="26dp"
        android:fontFamily="monospace"
        android:text="proceed"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold" />
</RelativeLayout>
